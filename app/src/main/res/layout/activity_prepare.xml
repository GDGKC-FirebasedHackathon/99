<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.food8.korea.PrepareActivity"
    android:orientation="vertical">


    <TextView
        android:text="@string/select_your_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_height="15dp"
        android:layout_weight="1.62"
        android:padding="20dp"
        android:orientation="horizontal"
        android:focusable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="지역 선택"
            android:textSize="20dp"
            android:layout_marginRight="30dp"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:id="@+id/localSelector1"
            android:transitionGroup="true"
            android:touchscreenBlocksFocus="false"
            android:background="@color/colorSpinner"
            android:spinnerMode="dialog"
            android:layout_marginRight="10dp"/>
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:id="@+id/localSelector2"
            android:transitionGroup="true"
            android:touchscreenBlocksFocus="false"
            android:background="@color/colorSpinner"
            android:spinnerMode="dialog"/>
    </LinearLayout>


    <Button
        android:onClick="clickComfirmUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/comfirm"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="홈"
            android:background="@drawable/btn_press"
            android:textColor="#FFFFFF"
            android:id="@+id/btn_under1"
            android:onClick="mainClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="여행톡"
            android:background="@drawable/btn_press"
            android:textColor="#FFFFFF"
            android:id="@+id/btn_under3"
            android:onClick="mainClick" />

    </LinearLayout>
</LinearLayout>